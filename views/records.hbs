<!DOCTYPE html>
<html>
<head>
    <title>Records</title>
    <meta charset="utf-8"/>
</head>
<body>
<div style="padding: 20px">
    <h1>Records</h1>
    <form action="/records/create" method="POST" style="padding-bottom: 15px">
        <input type="text" placeholder="New Record Name" name="newRecordName">
        <input type="submit" value="add new record">
    </form>
    {{#if records}}
        <table border="1" cellpadding="5">
            <thead>
            <tr>
                <td>
                    Id
                </td>
                <td>
                    Name
                </td>
                <td></td>
            </tr>
            </thead>
            {{#each records}}
                <tr>
                    <td>
                        {{this._id}}
                    </td>
                    <td>
                        {{this.name}}
                    </td>
                    <td>
                        <form action="records/delete/{{this._id}}" method="POST">
                            <input type="submit" value="delete">
                        </form>
                    </td>
                </tr>
            {{/each}}
        </table>
    {{/if}}
</div>
</body>
<html>